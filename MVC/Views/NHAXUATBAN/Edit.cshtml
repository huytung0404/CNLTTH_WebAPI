@model DataBase.NHAXUATBANModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true)
    <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">SỬA NHÀ XUẤT BẢN</strong>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.MaNXB, "Mã Nhà Xuất Bản: ", new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            <span style="font-size:15pt;margin-left:5px;color:blue">@Model.MaNXB</span>
            @Html.Hidden("MaNXB", Model.MaNXB)
        </div>
    </div><br />

    <div class="form-group">
        @Html.LabelFor(model => model.TenNXB, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-actions no-color" style="margin-top:10px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" style="background-color:greenyellow" /> |
            <a href="@Url.Action("Index","NHAXUATBAN")" class="btn btn-default" style="background-color:plum ">Back</a>
        </div>
    </div>
</div>
}


