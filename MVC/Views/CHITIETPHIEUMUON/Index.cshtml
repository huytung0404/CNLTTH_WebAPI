        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoPhieuMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QUYENSACH.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOCGIA.TenDG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHANVIEN.TenNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HanTra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKhachTra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TienPhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LyDoPhat)
            </td>



            <td>
                <a href="@Url.Action("Edit","CHITIETPHIEUMUON", new { id = item.SoPhieuMuon})" class="btn btn-default" style="float:right; background-color:greenyellow">Edit</a>
                <a href="@Url.Action("Delete","CHITIETPHIEUMUON", new { id = item.SoPhieuMuon})" class="btn btn-default" style="float:right; background-color:red">Delete</a>
            </td>
        </tr>
    }

</table>

@* Tạo link liên kết các trang*@
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
        <style>

            .MenuTrang ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                overflow: hidden; /*background-color: #333;*/
            }

            .MenuTrang li {
                display: inline;
                float: left;
                border-right: 1px solid #bbb;
            }

                .MenuTrang li:last-child {
                    border-right: none;
                }

                .MenuTrang li a {
                    display: block;
                    color: Black;
                    text-align: center;
                    padding: 14px 16px;
                    text-decoration: none;
                }

                    .MenuTrang li a:hover:not(.MenuTrang) {
                        background-color: #4CAF50;
                    }

            .MenuTrang {
                background-color: cornflowerblue;
            }
        </style>
