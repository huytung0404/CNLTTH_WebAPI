@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-header">

    <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">CHI TIẾT PHIẾU MƯỢN</strong>



    <div class="search-bar" style="float:right">
        @using (Html.BeginForm("Index", "CHITIETPHIEUMUON", FormMethod.Get))
        {
            @Html.TextBox("SearchText", null, new { @placeholder = "Nhập ID hoặc Tên ĐG nhé :3 !!!" })
