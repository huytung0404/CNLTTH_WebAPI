        <dd>
            @Html.DisplayFor(model => model.LyDoPhat)
        </dd>
        <dt>
            Ngày Mượn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayMuon)
        </dd>

        <dt>
            Hạn Trả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HanTra)
        </dd>

        <dt>
            Ngày Khách Trả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKhachTra)
        </dd>
       
        <dt>
            Phí Phạt:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TienPhat)
        </dd>





    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" style="background-color:red" /> |
            <a href="@Url.Action("Index","CHITIETPHIEUMUON")" class="btn btn-default" style=" background-color:plum">Back</a>

        </div>
    }
</div>

