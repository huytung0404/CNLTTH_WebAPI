        <dd>
            <span style="font-size:15pt;margin-left:5px;color:blue">@Model.SoPhieuMuon</span>
            @*@Html.DisplayFor(model => model.SoPhieuMuon)*@
        </dd>

        <dt>
            Tên Sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QUYENSACH.TenSach)
        </dd>

        <dt>
