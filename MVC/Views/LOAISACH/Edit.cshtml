@model DataBase.LOAISACHModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true)
    <strong class="card-title" style="margin-left:20px; font-size:30px; color:aqua;">SỬA LOẠI SÁCH</strong>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.MaLoaiSach, "Mã Loại Sách: ", new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            <span style="font-size:15pt;margin-left:5px;color:blue">@Model.MaLoaiSach</span>
            @Html.Hidden("MaLoaiSach", Model.MaLoaiSach)
        </div>
    </div><br />
    <div class="form-group">
        @Html.LabelFor(model => model.TenLoaiSach, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bold; margin-right: 20px" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenLoaiSach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenLoaiSach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-actions no-color" style="margin-top:10px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" style="background-color:greenyellow" /> |
            <a href="@Url.Action("Index","LOAISACH")" class="btn btn-default" style="background-color:plum ">Back</a>
        </div>
    </div>
</div>
}


